{
    "name": "dmazur/vending-machine",
    "description": "Vending machine kata for Coding Dojo Silesia",
    "authors": [
        {
            "name": "Dawid Mazur",
            "email": "kontakt@dawidmazur.eu"
        }
    ],
    "require": {
        "php": "8.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "^2.16",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "VendingMachine\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "code-quality": "php ./vendor/bin/phpcs && php ./vendor/bin/phpstan analyse src tests"
    }

}
